@model IEnumerable<WebApplication1.Areas.Security.Models.UserViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> </h2>
        <header class="row content-header">
            <div class="col-md-6">
                <h2>Users</h2>
            </div>
            <div class="col-md-6 content-action text-right">
                             
                 <a href="@Url.Action("Create")" class="btn btn-info">
                    <span class="glyphicon glyphicon-plus-sign"></span>
                     Create New
                </a>
            </div>
        </header>

<table class="table">
    <tr>
        <th>
            First Name
        </th>

        <th>
            Last Name
        </th>
        <th>
            Age
        </th>
        <th>
            Gender
        </th>
        <th>
            Employment Date
        </th>
        <th>
            Year Attended
        </th>
        <th>
            School Attended
        </th>
        <th>
            Action Buttons
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmploymentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearAttended)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Schools)
        </td>
        <td>
            <div class="btn btn-link">
                 <span class="glyphicon glyphicon-pencil"></span>
                 @Html.ActionLink("Edit", "Edit", new { id=item.Id })
            </div>
            <div class="btn btn-link">
                <span class="glyphicon glyphicon-question-sign"></span>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            </div>
            <div class="btn btn-link">
                <span class="glyphicon glyphicon-trash"></span>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </div>
        </td>
        
    </tr>
}

</table>
